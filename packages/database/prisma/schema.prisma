generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id     @default(uuid())
  name String
}

model Chat {
  id String @id @default(uuid())
  uC UserChats @relation(fields: [uC_id], references: [id])
  uC_id String @unique
  tuC TempUserChats @relation(fields: [tuC_id], references: [id])
  tuC_id String @unique
}

model UserChats {
  id String @id @default(uuid())
  chat Chat?
}

model TempUserChats {
  id String @id @default(uuid())
  chat Chat?
}
